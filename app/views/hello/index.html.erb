<div ng-controller='myCtrl' align="center">

	<button type="button" class="btn btn-info" ng-click='startAnimation()' align = "center">Get Details</button>


	<div style="margin: 20px;">
		
		<table   class="table" >
			<thead>
				<tr>
					
					<th>ID</th>
					<th>First Name</th>
					<th>Last Name</th>
					<th>Company</th>
					<th>Zip</th>
					
				</tr>
			</thead>
			<tbody >
				<tr ng-repeat="p in persons" class ="animation">
					<td>{{p.ID}}</td>
					<td>{{p.first_name}}</td>
					<td>{{p.last_name}}</td>
					<td>{{p.company_name}}</td>
					<td>{{p.zip}}</td>
					
				</tr>

			</tbody>
		</table>
	</div>

